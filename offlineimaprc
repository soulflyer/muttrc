             'INBOX.Archives.2009',
             'INBOX.Archives.2010',
             'INBOX.Archives.2011',
             'INBOX.Archives.2012',
             'INBOX.Archives.2013',
             'INBOX.Archives.2014']

[mbnames]
enabled = yes
